# MCP Server Registry Entry Template
# Purpose: Template for adding new servers to $HOME/.claude/marketplaces/multiagent-dev/plugins/*/skills/*/config/mcp-servers-registry.json
# Variables: {{SERVER_NAME}}, {{DESCRIPTION}}, {{LOCAL_COMMAND}}, {{LOCAL_ARGS}}, {{LOCAL_ENV_KEY}}, {{REMOTE_COMMAND}}, {{REMOTE_ARGS}}, {{REMOTE_ENV_KEY}}
# Generated by: mcp-registry-manager agent
# Template location: $HOME/.claude/marketplaces/multiagent-dev/plugins/*/skills/*/mcp/templates/server-definition.json.template
#
# Server Definition Format:
# - name: Unique identifier for the server
# - description: One-line explanation of what the server does
# - variants: Different deployment modes (local, remote)
#   - local: Runs on developer's machine (most common)
#   - remote: Runs on deployment platform (Vercel, AWS, Railway, etc.)

{
  "{{SERVER_NAME}}": {
    "description": "{{DESCRIPTION}}",
    "variants": {
      "local": {
        "command": "{{LOCAL_COMMAND}}",
        "args": [{{LOCAL_ARGS}}],
        "env": {
          "{{LOCAL_ENV_KEY}}": "{{LOCAL_ENV_KEY}}"
        }
      },
      "remote": {
        "command": "{{REMOTE_COMMAND}}",
        "args": [{{REMOTE_ARGS}}],
        "env": {
          "{{REMOTE_ENV_KEY}}": "{{REMOTE_ENV_KEY}}"
        }
      }
    }
  }
}
