{
  "$schema": "website-design.json schema for marketing/content pages",
  "$version": "2.0.0",

  "project": "{project-name}",
  "generated_at": "{ISO datetime}",
  "description": "Marketing website pages and content (static/SEO-focused)",
  "framework": "Astro 4.x | Next.js (static export) | Gatsby | Hugo",
  "framework_note": "Can use any static site generator OR Next.js with static export",

  "source_documents": {
    "architecture": ["docs/architecture/frontend.md"],
    "brand_guidelines": null
  },

  "phases": {
    "_comment": "Website pages grouped by dependency phase for build ordering",
    "0": ["W001", "W002"],
    "1": ["W003", "W004"],
    "2": ["W005"]
  },

  "pages": [
    {
      "id": "W001",
      "name": "{page-name}",
      "route": "/{route-path}",
      "description": "{description}",
      "page_type": "landing | pricing | about | features | blog | docs",
      "priority": "P0 | P1 | P2",
      "complexity": "Simple | Moderate | Complex",
      "estimated_hours": 4,

      "phase": 0,
      "infrastructure_dependencies": [],
      "feature_dependencies": [],
      "design_dependencies": [],

      "layout": "{layout-name}",
      "content_type": "static | collection | dynamic",

      "sections": [
        {
          "name": "{section-name}",
          "type": "hero | features | pricing | testimonials | cta | faq",
          "ai_generated": true,
          "ai_config": {
            "content_prompt": "Detailed prompt for generate_marketing_content",
            "image_prompt": "Detailed prompt for generate_image_imagen3",
            "image_style": "photorealistic | modern_minimal | bold_vibrant | elegant",
            "aspect_ratio": "16:9 | 1:1 | 9:16 | 3:4 | 4:3",
            "image_size": "1K | 2K",
            "model": "imagen-4.0 | imagen-3.0",
            "tone": "professional | casual | enthusiastic | formal",
            "mcp_tools": {
              "content": "generate_marketing_content",
              "image": "generate_image_imagen3",
              "enhance_prompt": "enhance_prompt_for_photorealism"
            }
          }
        }
      ],

      "ai_features": {
        "content_generation": true,
        "image_generation": true,
        "seo_optimization": true
      },

      "seo": {
        "meta_title": "{title}",
        "meta_description": "{description}",
        "structured_data": ["Article", "Organization", "Product"],
        "og_image": "{path}"
      },

      "responsive_breakpoints": ["mobile", "tablet", "desktop"],
      "accessibility": {
        "wcag_level": "AA | AAA",
        "aria_requirements": []
      },

      "status": "planned | in_progress | completed"
    }
  ],

  "blog": {
    "enabled": false,
    "content_collection": "posts",
    "ai_generation": false,
    "categories": [],
    "tags": []
  },

  "content_collections": [
    {
      "name": "posts",
      "type": "blog | docs | case-studies",
      "schema": {
        "title": "string",
        "description": "string",
        "date": "date",
        "author": "string",
        "tags": "array"
      }
    }
  ],

  "cms_integration": {
    "enabled": false,
    "provider": "supabase | contentful | sanity",
    "collections": []
  },

  "mcp_servers": {
    "content_generation": {
      "url": "https://content.fastmcp.app/mcp",
      "enabled": true,
      "capabilities": [
        "image_generation",
        "video_generation",
        "marketing_content",
        "social_media",
        "cost_estimation"
      ]
    }
  },

  "ai_generation_config": {
    "default_image_model": "imagen-4.0",
    "default_image_size": "2K",
    "default_content_model": "claude",
    "default_tone": "professional",
    "enable_cost_tracking": true,
    "auto_generate_seo": true
  },

  "design_system": {
    "typography": {
      "font_primary": "{font-name}",
      "font_secondary": "{font-name}"
    },
    "colors": {
      "primary": "{color}",
      "secondary": "{color}",
      "accent": "{color}"
    },
    "spacing": "tailwind-default | custom",
    "brand_assets": "{path to logo, icons}"
  },

  "shared_context": {
    "brand_voice": "{description}",
    "target_audience": [],
    "competitors": [],
    "unique_value_proposition": "{description}"
  },

  "website_summary": {
    "total_pages": 0,
    "landing_pages": 0,
    "content_pages": 0,
    "blog_posts": 0,
    "by_phase": {
      "0": 0,
      "1": 0,
      "2": 0
    },
    "estimated_total_hours": 0,
    "ai_generated_content": 0,
    "ai_generated_images": 0
  },

  "metadata": {
    "version": "2.0",
    "last_updated": "{ISO date}",
    "update_frequency": "On page add/update"
  },

  "_schema_notes": {
    "when_to_use": {
      "description": "Use website-design.json for marketing/content pages regardless of framework",
      "examples": [
        "Landing pages (public-facing, SEO-critical)",
        "Pricing pages (conversion-focused)",
        "About/Features pages (informational)",
        "Blog/Documentation (content-heavy)",
        "Any page that doesn't require authentication"
      ],
      "frameworks": [
        "Astro (best for pure static content)",
        "Next.js with static export (good for React consistency)",
        "Gatsby (if using GraphQL)",
        "Hugo (if using Go templates)"
      ],
      "key_characteristic": "Pages where SEO, performance, and content delivery are primary concerns"
    },
    "page_types": {
      "landing": "Main landing page with hero, features, CTA",
      "pricing": "Pricing tiers, comparison, FAQ",
      "about": "Company story, team, mission",
      "features": "Product features showcase",
      "blog": "Blog post pages (content collection)",
      "docs": "Documentation pages (content collection)"
    },
    "content_type": {
      "static": "Static MDX page",
      "collection": "Content collection entry (blog, docs)",
      "dynamic": "Dynamically generated from CMS"
    },
    "section_types": {
      "hero": "Hero section with headline, subheadline, CTA",
      "features": "Feature grid or list",
      "pricing": "Pricing tiers comparison",
      "testimonials": "Customer testimonials carousel",
      "cta": "Call-to-action section",
      "faq": "Frequently asked questions accordion"
    },
    "ai_features": {
      "content_generation": "Generate marketing copy with AI via MCP server (Claude Sonnet 4 / Gemini 2.5)",
      "image_generation": "Generate hero/blog images with AI via MCP server (Google Imagen 3/4)",
      "video_generation": "Generate marketing videos with native audio via MCP server (Google Veo 3)",
      "social_media": "Generate platform-optimized social media images (Instagram, Twitter, LinkedIn, etc.)",
      "seo_optimization": "Auto-generate SEO meta tags and descriptions"
    },
    "mcp_server_tools": {
      "description": "Available tools from content.fastmcp.app/mcp",
      "tools": {
        "generate_image_imagen3": "Generate hero images, marketing visuals (Imagen 3.0/4.0)",
        "batch_generate_images": "Generate multiple images in one call",
        "generate_video_veo3": "Generate videos with native audio (Veo 3)",
        "generate_marketing_content": "AI copywriting (Claude/Gemini)",
        "enhance_prompt_for_photorealism": "Improve prompts for photorealistic output",
        "generate_social_media_image": "Platform-optimized images (Instagram, Twitter, etc.)",
        "batch_generate_social_set": "Multi-platform social campaigns",
        "calculate_cost_estimate": "Budget planning and cost tracking"
      },
      "pricing": {
        "imagen_1k": "$0.020 per image",
        "imagen_2k": "$0.080 per image",
        "veo3_video": "$0.75 per second",
        "content_generation": "$0.003 per 500 tokens"
      }
    },
    "phase_calculation": {
      "description": "Phase based on dependencies",
      "rule": "phase = max(dependency phases) + 1, or 0 if no dependencies"
    },
    "id_format": {
      "pages": "W001, W002, ... W999 (Website pages)",
      "layouts": "WL001, WL002, ... WL099"
    },
    "build_order": {
      "rule": "Build Phase 0 pages first, then Phase 1, etc.",
      "parallelization": "Pages in same phase can be built in parallel",
      "content": "Generate AI content/images during page build"
    }
  }
}
