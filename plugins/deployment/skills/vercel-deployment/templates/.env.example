# Public variables (exposed to browser with NEXT_PUBLIC_ prefix)
NEXT_PUBLIC_API_URL=your_api_url_here
NEXT_PUBLIC_SITE_URL=your_site_url_here
NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id_here

# Server-only variables (not exposed to browser)
DATABASE_URL=your_database_url_here
API_SECRET=your_api_secret_here
STRIPE_SECRET_KEY=your_stripe_key_here

# Vercel system variables (automatically provided by Vercel)
# VERCEL=1
# VERCEL_URL=<deployment-url>
# VERCEL_ENV=production|preview|development
# VERCEL_GIT_COMMIT_SHA=<commit-sha>
# VERCEL_GIT_COMMIT_REF=<branch-name>
