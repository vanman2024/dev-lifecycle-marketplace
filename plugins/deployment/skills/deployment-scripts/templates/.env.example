# Application Environment Variables Template
# Copy this file to .env and fill in the values

# ============================================
# Application Configuration
# ============================================

# Environment (development, staging, production)
NODE_ENV=production

# Application Port
PORT=8080

# Application URL (used for redirects, emails, etc.)
APP_URL=https://my-app.com

# ============================================
# Database Configuration
# ============================================

# Primary Database
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Redis Cache (optional)
REDIS_URL=redis://localhost:6379

# Database Pool Settings
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# ============================================
# Authentication & Security
# ============================================

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=your-secret-key-here

# Session Secret
SESSION_SECRET=your-session-secret-here

# API Keys
API_KEY=your-api-key-here

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# ============================================
# Third-Party Services
# ============================================

# Email Service (e.g., SendGrid, Mailgun)
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=your-email-api-key
EMAIL_FROM=noreply@my-app.com

# Cloud Storage (e.g., AWS S3, Google Cloud Storage)
STORAGE_PROVIDER=s3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=my-app-uploads

# Payment Processing (e.g., Stripe)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Analytics
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
MIXPANEL_TOKEN=your-mixpanel-token

# ============================================
# External APIs
# ============================================

# OpenAI
OPENAI_API_KEY=sk-...

# Supabase
SUPABASE_URL=https://xxx.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# ============================================
# Logging & Monitoring
# ============================================

# Log Level (debug, info, warn, error)
LOG_LEVEL=info

# Sentry (Error Tracking)
SENTRY_DSN=https://xxx@sentry.io/xxx

# ============================================
# Feature Flags
# ============================================

ENABLE_ANALYTICS=true
ENABLE_EMAIL=true
ENABLE_UPLOADS=true
MAINTENANCE_MODE=false

# ============================================
# Development Only
# ============================================

# Debug Mode (never enable in production!)
DEBUG=false

# Mock External Services
MOCK_EMAIL=false
MOCK_PAYMENT=false

# ============================================
# Deployment Platform Secrets
# ============================================

# These are typically set via platform UI, not .env file
# Listed here for documentation purposes

# Vercel
# VERCEL_TOKEN=
# VERCEL_ORG_ID=
# VERCEL_PROJECT_ID=

# Netlify
# NETLIFY_AUTH_TOKEN=
# NETLIFY_SITE_ID=

# Fly.io
# FLY_API_TOKEN=

# Render
# RENDER_API_KEY=

# AWS
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
