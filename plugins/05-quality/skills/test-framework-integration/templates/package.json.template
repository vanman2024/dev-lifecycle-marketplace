{
  "name": "playwright-mcp-automation",
  "version": "1.0.0",
  "description": "Automated testing with Playwright MCP integration",
  "main": "test-automation.js",
  "scripts": {
    "test": "node test-automation.js full",
    "test:smoke": "node test-automation.js smoke",
    "test:api": "node test-automation.js api-only",
    "test:ui": "node test-automation.js ui-only",
    "test:deploy": "node test-automation.js deploy",
    "test:commit": "node test-automation.js commit",
    "setup": "npx playwright install",
    "mcp:start": "npx @executeautomation/playwright-mcp-server",
    "mcp:test": "node playwright-mcp-wrapper.js"
  },
  "dependencies": {
    "playwright": "^1.56.1",
    "@executeautomation/playwright-mcp-server": "latest"
  },
  "devDependencies": {
    "husky": "^8.0.0",
    "lint-staged": "^13.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test:commit",
      "pre-push": "npm run test:smoke"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npm run test:smoke"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
