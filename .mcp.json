{
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ],
      "env": {
        "CONTEXT7_API_KEY": "${CONTEXT7_API_KEY}"
      }
    },
    "content-image-generation": {
      "command": "python",
      "args": [
        "/home/gotime2022/.claude/plugins/marketplaces/mcp-servers-marketplace/servers/content-media/content-image-generation-mcp/src/server.py"
      ],
      "env": {
        "GOOGLE_CLOUD_PROJECT": "${GOOGLE_CLOUD_PROJECT}",
        "GOOGLE_CLOUD_LOCATION": "us-central1",
        "GOOGLE_APPLICATION_CREDENTIALS": "${GOOGLE_APPLICATION_CREDENTIALS}",
        "ANTHROPIC_API_KEY": "${ANTHROPIC_API_KEY}",
        "GOOGLE_API_KEY": "${GOOGLE_API_KEY}",
        "OUTPUT_DIR": "./public/images/generated",
        "ENABLE_COST_TRACKING": "true"
      }
    },
    "figma-mcp": {
      "type": "http",
      "url": "http://localhost:8031",
      "env": {
        "FIGMA_ACCESS_TOKEN": "${FIGMA_ACCESS_TOKEN}"
      }
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/home/gotime2022"
      ]
    },
    "memory": {
      "type": "http",
      "url": "http://localhost:8765/mcp/claude-code/sse/default",
      "env": {
        "MEM0_API_KEY": "${MEM0_API_KEY}"
      }
    },
    "shadcn": {
      "command": "npx",
      "args": [
        "shadcn@latest",
        "mcp"
      ]
    },
    "supabase": {
      "type": "http",
      "url": "https://mcp.supabase.com/mcp?project_ref=${SUPABASE_PROJECT_REF}"
    },
    "tailwind-ui-mcp": {
      "type": "http",
      "url": "http://localhost:8032",
      "env": {
        "SUPABASE_URL": "${SUPABASE_URL}",
        "SUPABASE_ANON_KEY": "${SUPABASE_ANON_KEY}"
      }
    }
  }
}
